@model Studio.Application.ContactForms.Commands.Create.CreateContactFormCommand
@{
    ViewData["Title"] = "Contacts";
}

<div class="text-center">
    <h1 class="display-4">Contacts</h1>
    <div class="row">
    <div class="col-md-4">
        <form asp-controller="Home" asp-action="Contacts" method="post">
            <h4>Send email.</h4>
            <hr />
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control" />  
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />  
            <label asp-for="Topic">Subject</label>
            <input asp-for="Topic" class="form-control" />    
            <label asp-for="Message">Message</label>
            <textarea asp-for="Message" class="form-control"></textarea>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>
</div> 
</div>
