@using Studio.Application.Locations.Queries.GetLocationByIdPage;
@model LocationPageViewModel;

@{
    ViewData["Title"] = "Steps";
    int counter = 0;
}
    <partial name="_Header" />

    <main>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <div class="row">
                        <div class="col-xs-12 hair-dressing-salon">
                                <div class="hair-dressing-salon-logo">
                                    <img src="~/img/locations/@Model.Id/logo.jpg" alt="logo"/> 
                                </div>
                                <div class="hair-dressing-salon-name">
                                        <h2>@Model.Name</h2>
                                </div>
                        </div>             
                        
                                  
                        <div class="col-xs-12 hair-dressing-salon-info">
                                <h4>@Model.Slogan</h4>
                                <p>
                                   @Model.Description
                                </p>                                
                        </div>
                        <div class="col-xs-12 salon-address-wt">
                            <div class="address-phone">
                                <span>Адрес</span>
                                <p>@Model.Address</p>

                                <span>Телефон</span>
                                <p>@Model.Phone</p>
                            </div>
                            <div class="work-time">
                                    <span>Работно време</span>
                                    <p>@Model.StartDay - @Model.EndDay</p>
                                    <p>@Model.StartHour:00 - @Model.EndHour:00</p>
    
                                </div>   
                        </div>
                    </div>                              
                </div>
                <div class="col-xs-12 col-md-5 col-md-offset-1 venera-gallery">
                    <div class="row">
                        @for (int i = 1; i <= 4; i++)
                        {
                            if (i == 1)
                            {
                                <div class="col-xs-12">
                                    <img class="venera-studio-2" src=@("/img/locations/" + @Model.Id + "/" + @i + ".jpg") alt="studio-picture" />
                                </div>
                            }
                            else
                            {
                                <div class="col-xs-12 col-md-4">
                                    <img class="venera-studio-2" src=@("/img/locations/" + @Model.Id + "/" + @i + ".jpg") alt="studio-picture" />
                                </div>
                            }                            
                        }
                    </div>
                </div>               
            </div>
            <div class="row hairdresser-wrapper">                
                @foreach (var employee in @Model.Employees)
                {                    
                    <div class="col-xs-12 col-md-3 hairdresser-info employee-info">
                        <div class="hairdresser">
                            <img src=~/img/locations/employee1.jpg alt="employee" />
                            <span class="hairdresser-name">@employee.EmployeeName</span>
                            <span class="worker">@employee.Possitions</span>
                            <a asp-controller="Employee" asp-action="Workspace" asp-route-id="@employee.EmployeeId" title="Запази час">Запази час</a>
                        </div>                     
                    </div>
                }            
            </div>      
        </div>
    </main>