
@{
    ViewData["Title"] = "Cities";
}
<span id="Addressspan"></span>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Addresses
        </h1>
        <ol class="breadcrumb"></ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div >
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create / Edit Addresses</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form id="formAddress">
                        <div class="box-body">
                            <input type="hidden" id="id" name="id" />
                            <div class="form-group">
                                <label>Street</label>
                                <input class="form-control" id="street" name="street" placeholder="Write your street ...">
                            </div>
                            <div class="form-group">
                                <label>Number</label>
                                <input class="form-control" id="number" name="number" placeholder="Write your number ...">
                            </div>
                            <div class="form-group">
                                <label>Building</label>
                                <input class="form-control" id="building" name="building" placeholder="Write your building ...">
                            </div>
                            <div class="form-group">
                                <label>Entrance</label>
                                <input class="form-control" id="entrance" name="entrance" placeholder="Write your entrance ...">
                            </div>
                            <div class="form-group">
                                <label>Floor</label>
                                <input class="form-control" id="floor" name="floor" placeholder="Write your floor ...">
                            </div>
                            <div class="form-group">
                                <label>Apartment</label>
                                <input class="form-control" id="apartment" name="apartment" placeholder="Write your apartment ...">
                            </div>
                            <div class="form-group">
                                <label>District</label>
                                <input class="form-control" id="district" name="district" placeholder="Write your district ...">
                            </div>
                            <div class="form-group">
                                <label>Longitude</label>
                                <input class="form-control" id="longitude" name="longitude" type="number" placeholder="Write your longitude ...">
                            </div>
                            <div class="form-group">
                                <label>Latitude</label>
                                <input class="form-control" id="latitude" name="latitude" type="number" placeholder="Write your latitude ...">
                            </div>
                            <div class="form-group">
                                <label>City</label>
                                <select class="form-control" id="cityId" name="cityId"></select>
                            </div>                                

                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="button" id="Create" value="Create" class="btn btn-success" onclick="CreateData()" />
                            <input type="button" id="Update" value="Update" class="btn btn-info hidden" onclick="UpdateData()" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.col -->
            <div >


                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Addresses</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Address</th>
                                    <th>Longitude</th>
                                    <th>Latitude</th>
                                    <th>City</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="tbody"></tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>

    </section>
    <!-- /.content -->
</div>
@section Scripts{
<environment include="Development,Staging,Production">
    <script src="~/areas/Administrator/addresses.js"></script>
</environment>
}


