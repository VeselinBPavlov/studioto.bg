
@{
    ViewData["Title"] = "Адреси";
}
<span id="Addressspan"></span>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Адреси
        </h1>
        <ol class="breadcrumb"></ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div >
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Създаване / Промяна на адреси</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form id="formAddress">
                        <div class="box-body">
                            <input type="hidden" id="id" name="id" />
                            <div class="form-group">
                                <label>Улица</label>
                                <input class="form-control" id="street" name="street" placeholder="Напиши улица ...">
                            </div>
                            <div class="form-group">
                                <label>Номер</label>
                                <input class="form-control" id="number" name="number" placeholder="Напиши номер ...">
                            </div>
                            <div class="form-group">
                                <label>Блок</label>
                                <input class="form-control" id="building" name="building" placeholder="Напиши блок ...">
                            </div>
                            <div class="form-group">
                                <label>Вход</label>
                                <input class="form-control" id="entrance" name="entrance" placeholder="Напиши вход ...">
                            </div>
                            <div class="form-group">
                                <label>Етаж</label>
                                <input class="form-control" id="floor" name="floor" placeholder="Напиши етаж ...">
                            </div>
                            <div class="form-group">
                                <label>Апартамент</label>
                                <input class="form-control" id="apartment" name="apartment" placeholder="Напиши апартамент ...">
                            </div>
                            <div class="form-group">
                                <label>Квартал</label>
                                <input class="form-control" id="district" name="district" placeholder="Напиши квартал ...">
                            </div>
                            <div class="form-group">
                                <label>Дължина</label>
                                <input class="form-control" id="longitude" name="longitude" type="number" placeholder="Напиши дължина ...">
                            </div>
                            <div class="form-group">
                                <label>Ширина</label>
                                <input class="form-control" id="latitude" name="latitude" type="number" placeholder="Напиши ширина ...">
                            </div>
                            <div class="form-group">
                                <label>Град</label>
                                <select class="form-control" id="cityId" name="cityId"></select>
                            </div>                                

                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="button" id="Create" value="Създаване" class="btn btn-success" onclick="CreateData()" />
                            <input type="button" id="Update" value="Промяна" class="btn btn-info hidden" onclick="UpdateData()" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.col -->
            <div >


                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Адреси</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Адрес</th>
                                    <th>Дължина</th>
                                    <th>Ширина</th>
                                    <th>Град</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="tbody"></tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>

    </section>
    <!-- /.content -->
</div>
@section Scripts{
    <environment include="Development,Staging,Production">
        <script src="~/areas/Administrator/addresses.js"></script>
    </environment>
}


