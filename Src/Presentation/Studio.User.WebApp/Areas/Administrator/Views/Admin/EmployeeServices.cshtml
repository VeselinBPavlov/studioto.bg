
@{
    ViewData["Title"] = "Служители - Услуги";
}
<span id="EmployeeServicespan"></span>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Служители - Услуги
        </h1>
        <ol class="breadcrumb"></ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div >
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Създаване / Промяна на служители - услуги</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form id="formEmployeeService">
                        <div class="box-body">
                            <div class="form-group">
                                <label>Служител</label>
                                <select class="form-control" id="employeeId" name="employeeId"></select>
                            </div>
                            <div class="form-group">
                                <label>Услуга</label>
                                <select class="form-control" id="serviceId" name="serviceId"></select>
                            </div>
                            <div class="form-group">
                                <label>Цена</label>
                                <input type="number" class="form-control" id="price" name="price" placeholder="Напиши цена ...">
                            </div>
                            <div class="form-group">
                                <label>Продължителност</label>
                                <input class="form-control" id="durationInMinutes" name="durationInMinutes" placeholder="Напиши продължителност на услугата в минути ...">
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="button" id="Create" value="Създаване" class="btn btn-success" onclick="CreateData()" />
                            <input type="button" id="Update" value="Промяна" class="btn btn-info hidden" onclick="UpdateData()" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.col -->
            <div >


                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Служители - услуги</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Служител</th>
                                    <th style="width: 10px">#</th>
                                    <th>Услуга</th>
                                    <th>Цена</th>
                                    <th>Продължителност</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="tbody"></tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>

    </section>
    <!-- /.content -->
</div>
@section Scripts{
<environment include="Development,Staging,Production">
    <script src="~/areas/Administrator/employee-services.js"></script>
</environment>
}


