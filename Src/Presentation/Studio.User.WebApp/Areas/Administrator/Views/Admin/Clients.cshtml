
@{
    ViewData["Title"] = "Clients";
}
<span id="clientspan"></span>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Clients
        </h1>
        <ol class="breadcrumb"></ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div >
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create / Edit Clients</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form id="formClient">
                        <div class="box-body">
                            <input type="hidden" id="id" name="id" />
                            <div class="form-group">
                                <label>Company</label>
                                <input class="form-control" id="companyName" name="companyName" placeholder="Write your company name ...">
                            </div>
                            <div class="form-group">
                                <label>VAT Number</label>
                                <input class="form-control" id="vatNumber" name="vatNumber" placeholder="Write your company var number ...">
                            </div>
                            <div class="form-group">
                                <label>Manager First Name</label>
                                <input class="form-control" id="managerFirstName" name="managerFirstName" placeholder="Write your manager first name ...">
                            </div>
                            <div class="form-group">
                                <label>Manager Last Name</label>
                                <input class="form-control" id="managerLastName" name="managerLastName" placeholder="Write your manager first name ...">
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <input class="form-control" id="phone" name="phone" placeholder="Write company phone ...">
                            </div>


                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="button" id="Create" value="Create" class="btn btn-success" onclick="CreateData()" />
                            <input type="button" id="Update" value="Update" class="btn btn-info hidden" onclick="UpdateData()" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.col -->
            <div >


                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Clients</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Company</th>
                                    <th>Vat Number</th>
                                    <th>Manager</th>
                                    <th>Phone</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="tbody"></tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>

    </section>
    <!-- /.content -->
</div>
@section Scripts{
<environment include="Development,Staging,Production">
    <script src="~/areas/Administrator/clients.js"></script>
</environment>
}


