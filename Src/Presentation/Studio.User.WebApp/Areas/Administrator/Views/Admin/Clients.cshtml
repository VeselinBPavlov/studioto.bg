
@{
    ViewData["Title"] = "Фирми";
}
<span id="clientspan"></span>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Фирми
        </h1>
        <ol class="breadcrumb"></ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div >
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Създаване / Промяна на фирма</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form id="formClient">
                        <div class="box-body">
                            <input type="hidden" id="id" name="id" />
                            <div class="form-group">
                                <label>Фирма</label>
                                <input class="form-control" id="companyName" name="companyName" placeholder="Напиши име на фирма ...">
                            </div>
                            <div class="form-group">
                                <label>Данъчен номер</label>
                                <input class="form-control" id="vatNumber" name="vatNumber" placeholder="Напиши данъчен номер ...">
                            </div>
                            <div class="form-group">
                                <label>Име на управител</label>
                                <input class="form-control" id="managerFirstName" name="managerFirstName" placeholder="Напиши име на управител ...">
                            </div>
                            <div class="form-group">
                                <label>Фамилия на управител</label>
                                <input class="form-control" id="managerLastName" name="managerLastName" placeholder="Напиши фамилия на управител ...">
                            </div>
                            <div class="form-group">
                                <label>Телефон</label>
                                <input class="form-control" id="phone" name="phone" placeholder="Напиши телефон ...">
                            </div>


                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="button" id="Create" value="Създаване" class="btn btn-success" onclick="CreateData()" />
                            <input type="button" id="Update" value="Промяна" class="btn btn-info hidden" onclick="UpdateData()" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.col -->
            <div >


                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Фирми</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Фирма</th>
                                    <th>Данъчен номер</th>
                                    <th>Управител</th>
                                    <th>Телефон</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="tbody"></tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>

    </section>
    <!-- /.content -->
</div>
@section Scripts{
<environment include="Development,Staging,Production">
    <script src="~/areas/Administrator/clients.js"></script>
</environment>
}


