
@{
    ViewData["Title"] = "Обекти";
}
<span id="locationspan"></span>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Обекти
        </h1>
        <ol class="breadcrumb"></ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div >
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Създаване / Промяна на обекти</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form id="formLocation">
                        <div class="box-body">
                            <input type="hidden" id="id" name="id" />
                            <div class="form-group">
                                <label>Обект</label>
                                <input class="form-control" id="name" name="name" placeholder="Напиши име на обект ...">
                            </div>
                            <div class="form-group">
                                <label>Офис ли е обектът?</label>
                                <input type="checkbox" id="isOffice" name="isOffice" value="false" />
                            </div>
                            <div class="form-group">
                                <label>Телефон</label>
                                <input class="form-control" id="phone" name="phone" placeholder="Напиши телефон ...">
                            </div>
                            <div class="form-group">
                                <label>Слоган</label>
                                <input class="form-control" id="slogan" name="slogan" placeholder="Напиши слоган ...">
                            </div>
                            <div class="form-group">
                                <label>Описание</label>
                                <input class="form-control" id="description" name="description" placeholder="Напиши описание ...">
                            </div>
                            <div class="form-group">
                                <label>Начален работен ден</label>
                                <input class="form-control" id="startDay" name="startDay" placeholder="Напиши начален работен ден от седмицата ...">
                            </div>
                            <div class="form-group">
                                <label>Краен работен ден</label>
                                <input class="form-control" id="endDay" name="endDay" placeholder="Напиши краен работен ден от седмицата ...">
                            </div>
                            <div class="form-group">
                                <label>Начало на работен ден</label>
                                <input class="form-control" id="startHour" name="startHour" placeholder="Напиши начален час на работа ...">
                            </div>
                            <div class="form-group">
                                <label>Край на работен ден</label>
                                <input class="form-control" id="endHour" name="endHour" placeholder="Краен час на работа ...">
                            </div>
                            <div class="form-group">
                                <label>Фирма</label>
                                <select class="form-control" id="clientId" name="clientId"></select>
                            </div>
                            <div class="form-group">
                                <label>Адрес</label>
                                <select class="form-control" id="addressId" name="addressId"></select>
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="button" id="Create" value="Създаване" class="btn btn-success" onclick="CreateData()" />
                            <input type="button" id="Update" value="Промяна" class="btn btn-info hidden" onclick="UpdateData()" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.col -->
            <div >


                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Locations</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Обект</th>
                                    <th>Адрес</th>
                                    <th>Работни дни</th>
                                    <th>Работно време</th>
                                    <th>Телефон</th>
                                    <th>Фирма</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="tbody"></tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>

    </section>
    <!-- /.content -->
</div>
@section Scripts{
<environment include="Development,Staging,Production">
    <script src="~/areas/Administrator/locations.js"></script>
</environment>
}


