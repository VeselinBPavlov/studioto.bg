
@{
    ViewData["Title"] = "Locations";
}
<span id="locationspan"></span>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Locations
        </h1>
        <ol class="breadcrumb"></ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div >
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create / Edit Locations</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form id="formLocation">
                        <div class="box-body">
                            <input type="hidden" id="id" name="id" />
                            <div class="form-group">
                                <label>Location</label>
                                <input class="form-control" id="name" name="name" placeholder="Write location name ...">
                            </div>
                            <div class="form-group">
                                <label>Is Office</label>
                                <input type="checkbox" id="isOffice" name="isOffice" value="false" />
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <input class="form-control" id="phone" name="phone" placeholder="Write location phone ...">
                            </div>
                            <div class="form-group">
                                <label>Slogan</label>
                                <input class="form-control" id="slogan" name="slogan" placeholder="Write slogan ...">
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <input class="form-control" id="description" name="description" placeholder="Write description ...">
                            </div>
                            <div class="form-group">
                                <label>Start Day</label>
                                <input class="form-control" id="startDay" name="startDay" placeholder="Write description ...">
                            </div>
                            <div class="form-group">
                                <label>End Day</label>
                                <input class="form-control" id="endDay" name="endDay" placeholder="Write description ...">
                            </div>
                            <div class="form-group">
                                <label>Start Hour</label>
                                <input class="form-control" id="startHour" name="startHour" placeholder="Write description ...">
                            </div>
                            <div class="form-group">
                                <label>End Hour</label>
                                <input class="form-control" id="endHour" name="endHour" placeholder="Write description ...">
                            </div>
                            <div class="form-group">
                                <label>Client</label>
                                <select class="form-control" id="clientId" name="clientId"></select>
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <select class="form-control" id="addressId" name="addressId"></select>
                            </div>
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="button" id="Create" value="Create" class="btn btn-success" onclick="CreateData()" />
                            <input type="button" id="Update" value="Update" class="btn btn-info hidden" onclick="UpdateData()" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.col -->
            <div >


                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Locations</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Location</th>
                                    <th>Address</th>
                                    <th>Working Days</th>
                                    <th >Working Hours</th>
                                    <th>Phone</th>
                                    <th>Company</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="tbody"></tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>

    </section>
    <!-- /.content -->
</div>
@section Scripts{
<environment include="Development,Staging,Production">
    <script src="~/areas/Administrator/locations.js"></script>
</environment>
}


