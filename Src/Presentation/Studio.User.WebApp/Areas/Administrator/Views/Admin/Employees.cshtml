
@{
    ViewData["Title"] = "Employees";
}
<span id="Employeespan"></span>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Employees
        </h1>
        <ol class="breadcrumb"></ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div >
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Create / Edit Employees</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form id="formEmployee">
                        <div class="box-body">
                            <input type="hidden" id="id" name="id" />
                            <div class="form-group">
                                <label>First Name</label>
                                <input class="form-control" id="firstName" name="firstName" placeholder="Write your Employee ...">
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                <input class="form-control" id="lastName" name="lastName" placeholder="Write your Employee ...">
                            </div>
                            <div class="form-group">
                                <label>Location</label>
                                <select class="form-control" id="locationId" name="locationId"></select>
                            </div>


                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            <input type="button" id="Create" value="Create" class="btn btn-success" onclick="CreateData()" />
                            <input type="button" id="Update" value="Update" class="btn btn-info hidden" onclick="UpdateData()" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.col -->
            <div >


                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Employees</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Employee</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Location</th>
                                    <th>Possitions</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="tbody"></tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>

    </section>
    <!-- /.content -->
</div>
@section Scripts{
<environment include="Development,Staging,Production">
    <script src="~/areas/Administrator/employees.js"></script>
</environment>
}


