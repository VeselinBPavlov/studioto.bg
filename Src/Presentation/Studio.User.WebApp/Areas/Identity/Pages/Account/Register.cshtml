@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="loginWrapper">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 logo">
                <img src="~/img/logo/logo-black.png" alt="logo" />
                <p class="slogan">Book online, enjoy the place!</p>
                <h3>РЕГИСТРАЦИЯ</h3>
            </div>
            <div class="col-xs-12">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Input.FirstName" class="form-control" placeholder="Име" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    <input asp-for="Input.LastName" class="form-control" placeholder="Фамилия" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Телефон" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <input asp-for="Input.Password" class="form-control" placeholder="Парола"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Потвърди парола" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    <button type="submit" class="btn btn-primary">ПОТВЪРДИ</button>
                </form>                
                <p><a class="info" asp-page="./Login">Вече си се регистрирал? <strong>Логни ме!</strong></a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
